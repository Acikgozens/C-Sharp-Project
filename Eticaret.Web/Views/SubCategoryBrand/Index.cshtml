@{
    ViewData["Title"] = "Index";
}
@model List<SubCategoryBrand>

<h2> Alt kategori Markaları </h2>
<br />
<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Durumu</th>
            <th>Sıra No</th>
            <th>İşlem</th>



        </tr>
    </thead>
    <tbody>
        @foreach (var subCategoryBrand in Model)
        {
            <tr>
                <td>@subCategoryBrand.SubCategoryBrandId</td>
                <td>@subCategoryBrand.SubCategoryBrandName</td>
                <td>@subCategoryBrand.SubCategoryBrandStatus</td>
                <td>@subCategoryBrand.BrandId</td>
                <td>@subCategoryBrand.SubCategoryId</td>
                
                <td>
                    <a class="btn btn-danger" asp-controller="SubCategoryBrand" asp-action="Delete" asp-route-id="@subCategoryBrand.SubCategoryBrandId"> Silme</a>&nbsp;
                    <a class="btn btn-secondary" asp-controller="SubCategoryBrand" asp-action="Update" asp-route-id="@subCategoryBrand.SubCategoryBrandId"> Güncelle</a>&nbsp;
                </td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary " asp-area="" asp-controller="SubCategoryBrand" asp-action="Add">Ekle</a>
