@{
    ViewData["Title"] = "Kategori Güncelleme";
}
@model SubCategoryBrand

<h1> Alt Kategori Markası Güncelleme </h1>
<br />
<div class="row">

    <form asp-action="Update" asp-controller="SubCategoryBrand" method="post">
        <input type="hidden" asp-for="SubCategoryBrandId" />
        <input type="hidden" asp-for="SubCategoryBrandStatus" />
        <div class="form-group">
            <label asp-for="SubCategoryBrandName"></label>
            <input asp-for="SubCategoryBrandName" type="text" class="form-control" />
            <span asp-validation-for="SubCategoryBrandName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SortKey"></label>
            <input asp-for="SortKey" type="text" class="form-control" />
            <span asp-validation-for="SortKey" class="text-danger"></span>
        </div>
        @*        <div class="form-group">
        <label asp-for="CategoryStatus"></label>
        <select asp-for="CategoryStatus" asp-items="ViewBag.Status" class="form-control"></select>
        </div>*@

        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Kaydet" />
        </div>
    </form>
</div>