@{
    ViewData["Title"] = "Alt Kategori Markası Ekle";
}
@model SubCategoryBrand

<h1> Alt Kategori Markası Ekleme </h1>
<br />
<div class="row">

    <form asp-action="Add" asp-controller="SubCategoryBrand" method="post">
        <div class="form-group">
            <label asp-for="SubCategoryBrandName"></label>
            <input asp-for="SubCategoryBrandName" type="text" class="form-control" />
            <span asp-validation-for="SubCategoryBrandName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SortKey"></label>
            <input asp-for="SortKey" type="text" class="form-control" />
            <span asp-validation-for="SortKey" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <input type="submit" class="btn-primary" value="Ekle" />
        </div>
    </form>
</div>